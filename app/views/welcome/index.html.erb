<% if current_user %>
  <%= link_to 'Log out', logout_path %>
<% else %>
  <%= link_to 'Register as a User', new_user_path %>
  <%= link_to 'I have an account', login_path %>
<% end %>

<%= form_with url: search_senate_members_path, local: true do |form| %>
  <%= form.label :search, 'Search For Senators By Last Name:' %>
  <%= form.text_field :search %>

  <%= form.submit 'Search' %>
<% end %>
